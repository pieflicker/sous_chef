<%= form_for(@recipes) do |f| %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :description %>< /br>
    <%= f.text_area :description %>
  </div>
  
  <div class="field">
    <%= f.label :ingredients %><br />
    <%= f.text_area :ingredients %>
  </div>
  
  <div class="field">
    <%= f.label :instructions %> <br />
    <%= f.text_area :instructions %> <br />
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>